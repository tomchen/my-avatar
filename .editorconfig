root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.php]
indent_style = tab
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 4

[*.sln]
indent_style = tab

[*.md]
trim_trailing_whitespace = false
